{
  "name": "podium-reporting-toolkit",
  "version": "0.15.3",
  "description": "A collection of Podium's reporting platform and charting components built in React.",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "tdd": "jest --watchAll",
    "start": "start-storybook -p 9001 -c .storybook --quiet",
    "storybook": "start-storybook -p 9001 -c .storybook --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css}\"",
    "lint": "eslint src/** --fix --ext .jsx,.js,.ts,.tsx .",
    "build": "rm -rf build/ && webpack --mode=production",
    "analyze": "rm -rf build/ && mkdir -p tmp/ && webpack --mode=production --profile --json > tmp/stats.json && webpack-bundle-analyzer tmp/stats.json"
  },
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "eslint --fix --config react-app --max-warnings 0",
      "git add"
    ]
  },
  "author": "Some Notion",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@podiumhq/podium-ui": "^16.0.1",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-info": "^5.0.1",
    "@storybook/addon-notes": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^5.9.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^4.2.3",
    "moment": "^2.22.2",
    "prettier": "^1.15.3",
    "prop-types": "^15.6.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "regenerator-runtime": "^0.13.1",
    "styled-components": "^4.1.2",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "humanize-duration": "^3.16.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.groupby": "^4.6.0",
    "lodash.set": "^4.3.2",
    "recharts": "^1.4.1",
    "svg-inline-loader": "^0.8.0"
  },
  "peerDependencies": {
    "@podiumhq/podium-ui": "^16.0.1",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "styled-components": "^4.1.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  }
}
