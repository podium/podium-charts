#!/bin/bash
MESSAGE="AUTOBUILD_MESSAGE"
BLUE='\033[0;34m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

git stash save -k -u $MESSAGE 

echo "-----------------------------"
echo " Checking for deleted files.."
echo "-----------------------------"

if [[ $(git status | grep deleted) ]]; then
	echo "${YELLOW}WARN:${NC} You have deleted files. Cleaning up..."
	rm -rf $(git status | grep deleted | awk '{print $2}')
else
	echo "no deleted files found, continuing..."
fi

echo -e "${BLUE}---------------------------------"
echo -e "RUNNING BUILD....... (\°_°)\ ┬─┬ "
echo -e "---------------------------------${NC}"

yarn build

if [ $? -ne 0 ]; then
	if [[ $(git stash list | grep $MESSAGE) ]]; then
		git stash pop
	fi

	echo "${RED}*****************************"
	echo "BUILD FAILED!!! Try Again...."
	echo "*****************************${NC}"

	exit 1
fi

#echo "${GREEN}BUILD COMPLETE....."

git add build

if [[ $(git stash list | grep $MESSAGE) ]]; then
	echo "${GREEN}Done.${NC} unstashing untracked files..."
	git stash pop
else
	echo "${GREEN}Done.${NC} There were no stashed or untracked files"
fi

echo "${GREEN}---------------------------------"
echo "  Build Succeeded! (╯°□°)╯︵ ┻━┻ "
echo "--------------------------------${NC}"
