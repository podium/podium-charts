#!/bin/bash
git stash -k
echo "RUNNING BUILD...... (\°_°)\ ┬─┬"
yarn build

if [ $? -ne 0 ]; then
	git stash pop
	echo "!!!!!!!!!!!!!!!!!!!"
	echo "BUILD FAILED!!! Try Again...."
	echo "!!!!!!!!!!!!!!!!!!!"
	exit 1
fi

echo "BUILD COMPLETE....."
git add build
git stash pop

echo "---------------------------------"
echo "  Build Succeeded! (╯°□°)╯︵ ┻━┻"
echo "---------------------------------"

